<!DOCTYPE html>
<html lang="en">
<head>
  <title>Users</title>
</head>
<body>
 <div>
  <%= render partial: "shared/user", locals: { user: @user } %>
  <div>
    <h2>Bio</h2>
    <p><%= @user.bio %></p>
  <div>
  <div>
    <% @user.recent_posts(@user.id).each do |post| %>
      <%= render partial: "shared/post", locals: { post: post, user: @user } %>
    <% end %>
  </div>
  <%= button_to "See all posts", user_posts_path(user_id: @user.id), :method => "get" %>
 </div>
</body>
</html>